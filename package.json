{
  "name": "rhizos-cloud",
  "version": "0.1.0",
  "private": true,
  "description": "Decentralized Hardware-Agnostic Compute Platform",
  "scripts": {
    "dev": "concurrently -n orch,dash -c blue,magenta \"pnpm dev:orchestrator\" \"pnpm dev:dashboard\"",
    "dev:orchestrator": "pnpm --filter @rhizos-cloud/orchestrator dev",
    "dev:dashboard": "pnpm --filter @rhizos-cloud/dashboard dev",
    "dev:desktop": "pnpm --filter @rhizos-cloud/desktop tauri:dev",
    "dev:adapters": "pnpm --filter @rhizos-cloud/mcp-adapters dev",
    "build": "pnpm -r build",
    "build:orchestrator": "pnpm --filter @rhizos-cloud/orchestrator build",
    "build:adapters": "pnpm --filter @rhizos-cloud/mcp-adapters build",
    "build:dashboard": "pnpm --filter @rhizos-cloud/dashboard build",
    "build:desktop": "pnpm --filter @rhizos-cloud/desktop tauri:build",
    "build:node": "cd src/node-agent && cargo build --release",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "keywords": [
    "rhizos",
    "compute",
    "decentralized",
    "crypto",
    "cloud"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "zod": "^4.3.5"
  }
}
